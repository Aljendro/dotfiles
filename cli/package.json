{
  "name": "@aljendro/cli",
  "version": "1.0.0",
  "description": "A simple CLI tool built with yargs",
  "main": "index.js",
  "bin": {
    "cli": "./bin/cli"
  },
  "type": "module",
  "scripts": {
    "start": "node bin/cli.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "cli",
    "yargs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
